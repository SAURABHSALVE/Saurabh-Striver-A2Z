class Solution:
    def countSubsequenceWithTargetSum(self, nums, target):
        return self.func(0, target, nums)

    def func(self, ind, remaining, nums):
        # If we've considered all elements
        if ind == len(nums):
            return 1 if remaining == 0 else 0
        
        # If remaining becomes negative (optional optimization if nums are positive)
        if remaining < 0:
            return 0

        # Pick the element
        take = self.func(ind + 1, remaining - nums[ind], nums)

        # Skip the element
        not_take = self.func(ind + 1, remaining, nums)

        return take + not_take
if __name__ == "__main__":
    solution = Solution()
    nums = [1, 2, 3]
    target = 3
    result = solution.countSubsequenceWithTargetSum(nums, target)
    print(f"Number of subsequences that sum to {target}: {result}")
